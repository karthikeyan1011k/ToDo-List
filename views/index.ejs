<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/c03ec31dc2.js" crossorigin="anonymous"></script>
    <title>
        <%=title%>
    </title>

</head>

<body>

    <div class="container m-5 p-2 rounded mx-auto bg-light shadow">
        <!-- App title section -->
        <div class="row m-1 p-4">
            <div class="col">
                <div class="p-1 h1 text-primary text-center mx-auto display-inline-block">
                    <i class="fa fa-check bg-primary text-white rounded p-2"></i>
                    <u>TO-DO LIST</u>
                </div>
            </div>
        </div>
        <!-- Create todo section -->
        <form action="/create-todoList" method="POST">
            <p class="description"> DESCRIPTION
                <input type="text" class="col-auto d-flex align-items-center px-1 pr-3 " name="todoList" id=""
                    placeholder="Type To Add TO-DO List">
            </p>
            <select class="form" name="Category" aria-label="Default select example">
                <option> Choose a Category</option>
                <option name="1">Personal</option>
                <option name="2">Work</option>
                <option name="3">School</option>
                <option name="4">Others</option>
            </select>
            <p class="date"> DUE DATE
                <input type="date" name="date" id="">
            </p>
            <button class="bg-success btn button" type="submit">ADD TO-DO</button>
        </form>
        <div class="p-2 mx-4 border-black-25 border-bottom"></div>
        <div>
            <ul>
                 <!-- Function todo section -->
                <% for (let i of todo_list) { %>
                    <div>
                        <a href="">
                            <input type="checkbox" name="checkbox" id="ckBox">
                        </a>
                        <li>
                            <span> <strong>TO-DO&#160;:&#160;</strong> </span> <span>
                                <%= i.todoList %>
                            </span> <br>
                            <span><strong>DUE DATE&#160;&#160;:&#160;</strong></span> <span>
                                <%= i.date %>
                            </span><br>
                            <span><strong>CATEGORY&#160;:&#160;</strong></span> <span>
                                <%= i.Category %>
                            </span>

                        </li>
                    </div>
                    <!-- Delete todo section -->
                    <div class="delete-button">
                        <a href="/delete-todo/?id=<%= i.id %>/">
                            <p>&#10005;</p>
                        </a>
                    </div>
                    <% } %>
            </ul>
        </div>

        <script src="/js/file.js"></script>
</body>

</html>